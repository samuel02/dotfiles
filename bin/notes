#!/bin/sh
set -e

NOTES_DIR="$HOME/Dropbox/Notes/Klarna"
NOTES_EDITOR="vim +Goyo +3"

_new_note() {
    note_name="$*"
    timestamp="$(date +%Y%m%d)"

    if [ -z "$note_name" ]; then
      printf 'Title: '
      read -r note_name
    fi

    filename="$(echo "$note_name"          | \
                tr '[:upper:]' '[:lower:]' | \
                tr 'åä' 'a'                | \
                tr 'ÅÄ' 'A'                | \
                tr 'öÖ' 'oO'               | \
                tr -cd 'a-z0-9_- '         | \
                tr -s ' '                  | \
                tr ' ' '-').md"

    note="$NOTES_DIR/$timestamp-$filename"

    touch "$note"
    printf "# %s\\n\\n" "$note_name" > "$note"

    eval "$NOTES_EDITOR $note"
}

_open_note() {
  eval "$NOTES_EDITOR $1"
}

_delete_note() {
  rm -i "$1"
}

_list_notes() {
  while true; do
    ifs="$(printf '%b_' '\n')"
    IFS="${ifs%_}" out="$(cd "$NOTES_DIR" && \
                     fzf --preview="highlight -O ansi -l {} 2> /dev/null" \
                     --preview-window=right:70%:wrap \
                     --expect "ctrl-n,ctrl-d,ctrl-c")"

    key=$(printf "%s" "$out" | head -1)
    selected_file=$(printf "%s" "$out" | head -2 | tail -1)

    if [ "$key" = "ctrl-n" ]; then
      _new_note
      continue
    fi

    if [ "$key" = "ctrl-d" ]; then
      _delete_note "$NOTES_DIR/$selected_file"
      continue
    fi

    if [ "$key" = "ctrl-c" ]; then
      exit
    fi

    if [ ! -z "$selected_file" ]; then
      _open_note "$NOTES_DIR/$selected_file"
      continue
    fi
  done
}

if [ $# -lt 1 ]; then
  _list_notes
fi

while [ $# -gt 0 ]
do
  case ${1} in
    new         ) shift; _new_note "$@" && _list_notes ;;
    *           ) break ;;
  esac
  shift
done
